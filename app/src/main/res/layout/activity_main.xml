<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!-- main window -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/main_window"
        android:id="@+id/main_window">

        <Button
            android:layout_width="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="6dp"
            android:id="@+id/menu_button"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/bmin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="332dp"
            app:layout_constraintLeft_toRightOf="@id/menu_button"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bmax"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toRightOf="@id/bmin"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bclose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toRightOf="@id/bmax"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@id/menu_button"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="36dp"
            android:id="@+id/clock"
            android:background="@color/aquamarine"
            android:layout_marginLeft="32dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clock"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="2dp"
            android:background="@color/aqua"
            android:id="@+id/spectrum"/>

        <TextView
            android:layout_width="232dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toBottomOf="@id/bmin"
            app:layout_constraintLeft_toRightOf="@id/clock"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="17dp"
            android:background="@color/aquamarine"
            android:id="@+id/ticker"/>

        <TextView
            android:layout_width="24dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toBottomOf="@id/ticker"
            app:layout_constraintLeft_toRightOf="@id/clock"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:background="@color/aquamarine"
            android:id="@+id/bitrate"/>

        <TextView
            android:layout_width="17dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toBottomOf="@id/ticker"
            app:layout_constraintLeft_toRightOf="@id/clock"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:background="@color/aquamarine"
            android:id="@+id/samplerate"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>